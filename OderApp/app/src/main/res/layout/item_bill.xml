<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray"
    android:layout_margin="@dimen/_15sdp"
    app:mode="same_level"
    app:dragEdge="right"
    >

    <LinearLayout
        android:id="@+id/ln_cancel_bill"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/border_background_delete_item"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/trash"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
       >

        <ImageView
            android:id="@+id/img_bill"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/kv_khoai_tay_chien"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã hóa đơn:"
            android:textSize="@dimen/_16ssp"
            android:layout_margin="@dimen/_5sdp"
            android:textColor="@color/primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/img_bill"/>
        <TextView
            android:id="@+id/tv_id_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:textColor="@color/primary"
            android:textSize="@dimen/_16ssp"
            android:layout_margin="@dimen/_5sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/a"/>
        <TextView
            android:id="@+id/b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:layout_margin="@dimen/_5sdp"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/primary"
            app:layout_constraintTop_toBottomOf="@+id/a"
            app:layout_constraintLeft_toRightOf="@+id/img_bill"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sản phẩm"
            android:textColor="@color/primary"
            android:textSize="@dimen/_16ssp"
            android:layout_margin="@dimen/_5sdp"
            app:layout_constraintLeft_toRightOf="@+id/b"
            app:layout_constraintTop_toBottomOf="@+id/a"/>
        <ImageView
            android:id="@+id/c"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/creditcard"
            app:layout_constraintTop_toBottomOf="@+id/img_bill"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="@dimen/_5sdp"/>
        <TextView
            android:id="@+id/tv_tinhtrangHD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chưa thanh toán"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/primary"
            app:layout_constraintLeft_toRightOf="@+id/c"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/_5sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1200000"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/main_color"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/_5sdp"
            app:layout_constraintRight_toLeftOf="@+id/e"/>
        <TextView
            android:id="@+id/e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:text="VNĐ"
            android:textSize="@dimen/_16ssp"
            android:layout_margin="@dimen/_5sdp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>