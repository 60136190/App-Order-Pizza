<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_hot_this_month"
        android:layout_width="140dp"
        android:layout_height="@dimen/_170sdp"
        android:layout_margin="@dimen/_5sdp">

        <ImageView
            android:id="@+id/hot_image"
            android:layout_width="0dp"
            android:layout_height="@dimen/_90sdp"
            android:scaleType="fitXY"
            android:layout_marginBottom="@dimen/_5sdp"
            android:src="@drawable/hota"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_hot_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Pizza Pesto"
            android:textColor="@color/primary"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hot_image" />

        <TextView
            android:id="@+id/b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Bestseller"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/_11ssp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_hot_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/b">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/ic_baseline_access_time_24" />

            <TextView
                android:id="@+id/tv_hot_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00 - 23:55"
                android:textColor="@color/secondary_text"
                 />
        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_product"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:icon="@drawable/ic_baseline_add_24"
            android:text="color"
            android:padding="0dp"
            android:layout_margin="5dp"
            android:background="@drawable/border_radiobutton"
            app:backgroundTint="@color/primary"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>